<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.medaino.www.medainoandroid.Scanklop">

    <TextView
        android:id="@+id/header"
        android:text="@string/bl_con"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:background="#ffff606c"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Scan klop"
        android:id="@+id/con_button"
        android:padding="7dp"
        android:singleLine="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:clickable="true"
        android:onClick="scan_klops"
        android:background="@android:color/holo_orange_light"
        android:layout_alignBottom="@+id/header"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true" />
    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@android:id/list"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/con_button" />


</RelativeLayout>
